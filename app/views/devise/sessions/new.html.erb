<h2><%= t("devise.login").upcase %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-2">
    <%= f.label :email, class: "mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@example.com", class: "form-control w-50" %>
  </div>

  <div class="mb-2">
    <%= f.label t("devise.password"), class: "mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: t("devise.password").capitalize, class: "form-control w-50" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2">
      <%= f.check_box :remember_me %>
      <%= f.label t("devise.remember_me") %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t("devise.login").capitalize, class: "btn btn-primary my-2 py-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>